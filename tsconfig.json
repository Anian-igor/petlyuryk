{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "ts-node": {
  	"require": ["tsconfig-paths/register"],
  	"files": true
  },
  "compilerOptions": {
  	"baseUrl": ".",
  	"paths": { "~/*": ["./src/*"] },
  	"typeRoots": ["./node_modules/@types", "./src"],
  	"exactOptionalPropertyTypes": true,
  	"noImplicitOverride": true,
  	"resolveJsonModule": true
  },
}